{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "description": "Group and schedule all @aws-cdk related updates.",
    "packageRules": [
        {
            "extends": ["schedule:monthly"],
            "groupName": "@aws-cdk packages",
            "minimumReleaseAge": "10 days",
            "matchPackageNames": [
                "/aws-cdk/",
                "/aws-cdk-lib/",
                "/aws-cdk-local/"
            ]
        }
    ]
}
