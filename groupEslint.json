{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "description": "Group and schedule all eslint related updates.",
    "packageRules": [
        {
            "extends": ["schedule:monthly"],
            "groupName": "eslint packages",
            "minimumReleaseAge": "10 days",
            "matchPackageNames": [
                "/@eslint/*/",
                "/@typescript-eslint/*/",
                "/eslint/",
                "/eslint-*/",
                "/prettier/",
                "/prettier-*/",
                "/typescript-eslint/"
            ]
        }
    ]
}
